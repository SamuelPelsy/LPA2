<p id="notice"><%= notice %></p>

<div class="container">
  <div class="card">
    <div class="card-body">
      <p>
        <strong>Code:</strong>
        <%= @burger.code %>
      </p>

      <p>
        <strong>Name:</strong>
        <%= @burger.name %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= @burger.price %>
      </p>

      <p>
        <strong>Image:</strong>
        <%= @burger.image %>
      </p>

      <p>
        <strong>Nutriscore:</strong>
        <%= @burger.nutriscore %>
      </p>

      <p>
        <strong>Nutriments:</strong>
        <% @burger.get_nutriments.each do |ele| %>
          <div> - <%= ele %></div>
        <% end %>
      </p>
    </div>
  </div>

  <%= link_to 'Edit', edit_burger_path(@burger) %> |
  <%= link_to 'Back', burgers_path %>
</div>
